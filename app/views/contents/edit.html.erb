<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= asset_path "book.png" %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>手順説明の編集</h1>
          <span class="subheading">一度削除すると元には戻りません。<br>ご注意ください。</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
        <%= render 'form', content: @content %>
        <h4 class="post-title">
        <%= link_to '◀︎戻る', :back %>
      </div>
    </div>
  </div>
</div>
