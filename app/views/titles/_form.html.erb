<%= form_with(model: [@category, @title], local: true) do |form| %>
  <% if @title.errors.any? %>
    <div id="error_explanation">
      <h2 class="alert alert-danger"><%= @title.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% title.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= form.text_field :title, :size=>"30" %></p>
  </div>

  <div class="actions">
    <p><%= form.submit "タイトル作成", class: "btn btn-warning btn-lg" %></p>
  </div>
<% end %>
