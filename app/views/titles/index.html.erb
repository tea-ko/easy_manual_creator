<p id="notice"><%= notice %></p>

<h1>タイトル一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @titles.each do |title| %>
      <tr>
        <td><%= title.title %></td>
        <td><%= link_to '詳細', title %></td>
        <td><%= link_to '編集', edit_title_path(title) %></td>
        <td><%= link_to '削除', title, method: :delete, data: { confirm: 'このタイトルを削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

