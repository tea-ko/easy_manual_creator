<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= asset_path "book.png" %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>ユーザー登録</h1>
          <span class="subheading">マニュアルを作成する人は<br>事前にユーザー登録を行ってください。</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
        <h2 class="post-title">
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "つのエラーがあります") %></h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
            </div>
          <% end %>
          <%= form_with(model: @user, local: true) do |f| %>  
            <p>
              <%= f.label "名前" %><br>
              <%= f.text_field :name %>
            </p>
            <p>
              <%= f.label :email %><br>
              <%= f.email_field :email %>
            </p>
            <p>
              <%= f.label:password %><br>
              <%= f.password_field :password %>
            </p>
            <p>
              <%= f.label "Password（確認用）" %><br>
              <%= f.password_field :password_confirmation %>
            </p>
            <p><%= f.submit "登録", class: "btn btn-warning btn-lg" %></p>
          <% end %>
      </div>
    </div>
  </div>
</div>